<% circles = {
  'black' => "\xE2\x9A\xAB",
  'white' => "\xE2\x9A\xAA"
}
empty_square = "\xE2\x97\xBB"
%>
<div>
  </div>
  <div>
<table style="border: 1px solid black;">
  <% Stone::NUMBER_OF_ROWS.times do |row_number| %>
    <tr>
      <% Stone::NUMBER_OF_COLUMNS.times do |column_number| %>
        <td style="border: 1px solid black;">
          <%= link_to empty_square, turns_path(row: row_number, column: column_number), method: :post %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
<ol>
<% @turns.each do |turn| %>
  <li><%= turn.inspect %> <%= turn.stone_additions.inspect %></li>
<% end %>
</ol>
</div>
