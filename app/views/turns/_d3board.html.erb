<div id="board-container">
</div>
<script>
  var board = d3.select("#board-container").append("svg").attr("height", "500px").attr("width", "500px");
  board.append("rect").attr({width: 500, height: 500, x: 0, y: 0, fill: "#E09E48"});

  for(var i=0; i<20; i++){
    board.append("line")
    .attr({
      x1: 12.5,
      x2: 500 - 12.5,
      y1: 25*i+12.5,
      y2: 25*i+12.5,
      stroke: "#000000",
      "stroke-width": 1
    });

    board.append("line")
    .attr({
      y1: 12.5,
      y2: 500 - 12.5,
      x1: 25*i+12.5,
      x2: 25*i+12.5,
      stroke: "#000000",
      "stroke-width": 1
    });
  }

  [3, 9, 15].forEach(function (x){
    [3, 9, 15].forEach(function (y){
      board.append("ellipse")
      .attr({
        cx: x*25+12.5,
        cy: y*25+12.5,
        rx: 3,
        ry: 3,
        fill: "#000000"
      });
    });
  });

</script>
